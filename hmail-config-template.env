# hMail Server Configuration for MaxMed UAE
# Copy these settings to your .env file

# Basic App Settings
APP_NAME="MaxMed UAE"
APP_ENV=local
APP_DEBUG=true
APP_TIMEZONE=Asia/Dubai
APP_URL=http://localhost

# Database Configuration (XAMPP MySQL)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=maxmed
DB_USERNAME=root
DB_PASSWORD=

# hMail Server Configuration for Development
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=25
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@localhost.com"
MAIL_FROM_NAME="MaxMed UAE"
MAIL_ADMIN_EMAIL="wbabi@localhost.com"

# Session and Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_STORE=database
QUEUE_CONNECTION=database

# Production Mail Settings (for AWS deployment)
# Uncomment and configure when deploying to production
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS="noreply@maxmedme.com"
# MAIL_FROM_NAME="MaxMed UAE"
# MAIL_ADMIN_EMAIL="admin@maxmedme.com" 